#!/bin/bash

SCRIPT=`basename ${BASH_SOURCE[0]}`
ARGS=$(getopt --long "to:,message:,from:,attachment:,group:" --options "" -n "$SCRIPT" -- "$@");

#Bad arguments
if [ $? -ne 0 ];
then
  exit 1
fi

eval set -- "$ARGS";

while true; do
  case "$1" in
    --from)
          shift
          FROM=$1
          shift
    ;;
    --to)
          shift
          TO=$1
          shift
    ;;
    --group)
          shift
          GROUP=$1
          shift
    ;;
    --message)
          shift
          MESSAGE="$1"
          shift
    ;;
    --attachment)
          shift
          ATTACHMENT=$1
          shift
    ;;
    --)
      shift
      break
    ;;
    *)
      exit 1
    ;;
  esac
done

## check vars
[ -z $TO ] && exit 1
[ -z ${MESSAGE%% *} ] && exit 1

## change into signal directory
SOURCE="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $SOURCE

## set extra options
unset OPTS

# attachment
if [ ! -z $ATTACHMENT ]; then
  OPTS="$OPTS -attachment=$ATTACHMENT"
fi

# group chat
if [ ! -z $GROUP ]; then
  OPTS="$OPTS -group=$GROUP"
fi

## send the message

if [ ! -z $FROM ]; then
  ./textsecure -to="$TO" -message="$FROM: ${MESSAGE}" $OPTS
else
  ./textsecure -to="$TO" -message="${MESSAGE}" $OPTS
fi
